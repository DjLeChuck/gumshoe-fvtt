{
	"compilerOptions": {
		"target": "ES2019",
		"lib": [
			"DOM",
			"ES6",
			"ES2019"
		],
		"moduleResolution": "node",
		"module": "esnext",
    "types": [
			// "react",
			"@league-of-foundry-developers/foundry-vtt-types",
			"investigator-fvtt-types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react"
	},
	"exclude": ["**/node_modules", "**/.*/"],
	"include": ["src"]
}
